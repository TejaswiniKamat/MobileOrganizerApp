<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrganizerApp.Views.EventDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
        <Label Text="Repeat:" FontSize="Medium" />
        <Label Text="{Binding RepeatTypeName}" FontSize="Small"/>
        <Label Text="Event Date:" FontSize="Medium" />
        <Label Text="{Binding Item.EventDate}" FontSize="Small"/>
        <!--<Picker Title="Select Repeat" x:Name="dboRepeat"  
            ItemsSource="{Binding RepeatTypeNames}" SelectedIndex="{Binding Item.RepeatTypeId}">
        </Picker>-->
    </StackLayout>
</ContentPage>